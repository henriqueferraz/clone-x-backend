generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  slug     String  @unique
  email    String? @unique
  password String
  name     String
  avatar   String  @default("default.jpg")
  cover    String  @default("default.jpg")
  bio      String?
  link     String?
}

model Tweet {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userSlug  String
  body      String
  image     String?
  createdAt DateTime @default(now())
  answerOf  String   @default("0")
}

model TweetLike {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userSlug String
  tweetId  String
}
